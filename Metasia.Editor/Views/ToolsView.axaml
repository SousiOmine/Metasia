<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Metasia.Editor.ViewModels"
             xmlns:views="clr-namespace:Metasia.Editor.Views"
             xmlns:tools="clr-namespace:Metasia.Editor.Views.Tools"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
             x:Class="Metasia.Editor.Views.ToolsView"
             x:DataType="vm:ToolsViewModel">
    
    
    <TabControl>
        <TabItem Header="P">
            <ToolTip.Tip>Project</ToolTip.Tip>
            <tools:ProjectTool DataContext="{Binding ProjectToolVM}"/>
        </TabItem>
        
        <TabItem Header="F">
            <ToolTip.Tip>File Explorer</ToolTip.Tip>
            
        </TabItem>
        
        <TabItem Header="I">
            <ToolTip.Tip>Inteligense</ToolTip.Tip>
            
        </TabItem>
    </TabControl>
</UserControl>
