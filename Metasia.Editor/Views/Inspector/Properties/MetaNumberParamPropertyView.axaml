<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Metasia.Editor.ViewModels.Inspector.Properties"
             xmlns:vm_components="clr-namespace:Metasia.Editor.ViewModels.Inspector.Properties.Components"
             xmlns:views_components="clr-namespace:Metasia.Editor.Views.Inspector.Properties.Components"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
             x:Class="Metasia.Editor.Views.Inspector.Properties.MetaNumberParamPropertyView"
             x:DataType="vm:MetaNumberParamPropertyViewModel">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="{Binding PropertyDisplayName}" VerticalAlignment="Top" Width="80"></Button>
            <ItemsControl ItemsSource="{Binding CoordPoints}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate DataType="vm_components:MetaNumberCoordPointViewModel">
                        <views_components:MetaNumberCoordPointView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </StackPanel>
</UserControl>
