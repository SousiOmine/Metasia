<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Metasia.Editor.ViewModels.Inspector.Properties"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="50"
             x:Class="Metasia.Editor.Views.Inspector.Properties.MetaNumberParamPropertyView"
             x:DataType="vm:MetaNumberParamPropertyViewModel">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Content="{Binding PropertyDisplayName}" VerticalAlignment="Center" Width="80"></Button>
            <TextBlock Text="{Binding PropertyValue}" VerticalAlignment="Center" Padding="10"></TextBlock>
            <Slider Width="100"></Slider>
        </StackPanel>
    </StackPanel>
</UserControl>
