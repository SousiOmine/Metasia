<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Metasia.Editor.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views_settings="using:Metasia.Editor.Views.Settings"
        xmlns:vm_settings="clr-namespace:Metasia.Editor.ViewModels.Settings"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="Metasia.Editor.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        Title="Settings"
        Width="600" Height="400"
        CanResize="False">
    <Grid ColumnDefinitions="150,*" RowDefinitions="*,Auto">
        <ListBox Grid.Column="0" Grid.Row="0" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}">
            <ListBox.ItemTemplate>
                <DataTemplate DataType="vm_settings:SettingsCategoryViewModel">
                    <TextBlock Text="{Binding Name}" Padding="10,8"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ContentControl Grid.Column="1" Grid.Row="0" Content="{Binding SelectedCategory}" Margin="15">
            <ContentControl.DataTemplates>
                <DataTemplate DataType="vm_settings:GeneralSettingsViewModel">
                    <views_settings:GeneralSettingsView/>
                </DataTemplate>
                <DataTemplate DataType="vm_settings:EditorSettingsViewModel">
                    <views_settings:EditorSettingsView/>
                </DataTemplate>
            </ContentControl.DataTemplates>
        </ContentControl>
        <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8" Margin="0,10,15,15">
            <Button Content="既定に戻す" Command="{Binding ResetToDefaultsCommand}"/>
            <Button Content="キャンセル" Command="{Binding CancelCommand}"/>
            <Button Content="適用" Command="{Binding ApplyCommand}"/>
        </StackPanel>
    </Grid>
</Window>
